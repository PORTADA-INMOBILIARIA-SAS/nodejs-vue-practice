---
import services  from "../../public/data/services.json";
---

<div class="mx-4 flex justify-center">
  <div class="max-w-2xl lg:max-w-6xl">
    <dl class="grid w-full grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-2 lg:gap-y-16">
    {
      services.map(({ title, description, icon }) => (
        <div class="relative pl-16">
            <dt class="text-base font-bold leading-7">
                <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-red-600">
                  <span class="icon text-white" set:html={icon}></span>
                </div>
                {title}
            </dt>
            <dd class="mt-2 text-base leading-7">{description}</dd>
        </div>
      ))
    }
    </dl>
  </div>
</div>
